{{- /*
Template: xdg-paths
Description: Returns the XDG directory paths for the current platform
Returns: map with keys: config, data, state, cache

Usage in templates:
  {{ $xdg := include "xdg-paths" . | fromJson }}
  {{ $xdg.config }}
  {{ $xdg.data }}
  {{ $xdg.state }}
  {{ $xdg.cache }}
*/ -}}

{{- if eq .chezmoi.os "windows" -}}
{
  "config": "{{ .chezmoi.homeDir }}\\.config",
  "data": "{{ .chezmoi.homeDir }}\\.local\\share",
  "state": "{{ .chezmoi.homeDir }}\\.local\\state",
  "cache": "{{ .chezmoi.homeDir }}\\.cache"
}
{{- else -}}
{
  "config": "{{ .chezmoi.homeDir }}/.config",
  "data": "{{ .chezmoi.homeDir }}/.local/share",
  "state": "{{ .chezmoi.homeDir }}/.local/state",
  "cache": "{{ .chezmoi.homeDir }}/.cache"
}
{{- end -}}
