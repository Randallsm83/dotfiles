{
  // ============================================================================
  // THEME & APPEARANCE
  // ============================================================================
  // Active Theme: One Dark Pro
  "workbench.colorTheme": "One Dark Pro Night Flat",
  "workbench.preferredDarkColorTheme": "One Dark Pro Night Flat",
  "workbench.iconTheme": "a-file-icon-vscode",
  "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",
  "oneDarkPro.editorTheme": "One Dark Pro Night Flat",
  "oneDarkPro.vivid": true,
  // Alternative Themes (uncomment to switch)
  // Gruvbox Concoctis
  // "gruvboxConcoctis.useBoldFont": true,
  // "gruvboxConcoctis.usePalette": "mix",
  // "gruvboxConcoctis.selectionColor": "orange",
  // "workbench.colorTheme": "gruvboxConcoctis dark medium",
  // "workbench.preferredDarkColorTheme": "gruvboxConcoctis dark medium",
  // "workbench.iconTheme": "gruvbox-material-icon-theme",
  // Tokyo Night
  // "workbench.colorTheme": "Tokyo Night",
  // "workbench.preferredDarkColorTheme": "Tokyo Night",
  // "workbench.iconTheme": "material-icon-theme",
  // ============================================================================
  // FONTS & TYPOGRAPHY
  // ============================================================================
  // Editor Font
  "editor.fontFamily": "FiraCode Nerd Font, Hack Nerd Font, Consolas, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.4,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": true,
  // Code Lens Font
  "editor.codeLensFontFamily": "FiraCode Nerd Font, Hack Nerd Font, Consolas, 'Courier New', monospace",
  "editor.codeLensFontSize": 13,
  // Terminal Font
  "terminal.integrated.fontFamily": "FiraCode Nerd Font, Hack Nerd Font, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontLigatures.enabled": true,
  // ============================================================================
  // EDITOR BEHAVIOR
  // ============================================================================
  // Editing
  "editor.autoIndentOnPaste": true,
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "on",
  "editor.wrappingStrategy": "simple",
  // Cursor
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.cursorBlinking": "blink",
  "editor.cursorSurroundingLines": 5,
  "editor.cursorSmoothCaretAnimation": "on",
  // Visual Guides
  "editor.guides.bracketPairs": true,
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "line",
  "editor.renderWhitespace": "selection",
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": false,
  // Suggestions & Hover
  "editor.hover.delay": 300,
  "editor.hover.enabled": true,
  "editor.suggest.preview": true,
  "editor.screenReaderAnnounceInlineSuggestion": false,
  // Code Features
  "editor.codeLens": false,
  "editor.aiStats.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  // Minimap
  "editor.minimap.size": "fill",
  // Scrolling
  "editor.smoothScrolling": true,
  "editor.mouseWheelScrollSensitivity": 2,
  // Performance
  "editor.experimentalGpuAcceleration": "on",
  // ============================================================================
  // WORKBENCH BEHAVIOR
  // ============================================================================
  "workbench.startupEditor": "none",
  "workbench.list.smoothScrolling": true,
  "workbench.list.openMode": "doubleClick",
  "workbench.enableExperiments": false,
  "window.menuBarVisibility": "compact",
  // "window.zoomLevel": 0.1,
  "breadcrumbs.enabled": true,
  // ============================================================================
  // FILE HANDLING
  // ============================================================================
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  // File Watcher Performance (especially for remote)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/vendor/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.cache/**": true
  },
  // ============================================================================
  // LANGUAGE-SPECIFIC SETTINGS
  // ============================================================================
  "[perl]": {
    "editor.insertSpaces": false
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.rulers": [
      100,
      120
    ]
  },
  // ============================================================================
  // EXTENSIONS
  // ============================================================================
  // Markdown Preview Enhanced
  "markdown-preview-enhanced.previewTheme": "one-dark.css",
  "markdown-preview-enhanced.revealjsTheme": "night.css",
  // Todo Highlight
  "todohighlight.isEnable": true,
  // CSpell
  "cSpell.userWords": [
    "BAAI",
    "Dreamhost",
    "Getopt",
    "modelcontextprotocol",
    "ondemand",
    "Proservice",
    "proservices",
    "qdrant",
    "sequentialthinking"
  ],
  // ============================================================================
  // REMOTE DEVELOPMENT (SSH)
  // ============================================================================
  "remote.SSH.configFile": "C:\\Users\\Randall\\.ssh\\config",
  "remote.SSH.connectTimeout": 60,
  "remote.restoreForwardedPorts": false,
  "remote.autoForwardPorts": false,
  // "remote.SSH.showLoginTerminal": true,
  "remote.SSH.remotePlatform": {
    "yakko.sd.dreamhost.com": "linux",
    "yakko": "linux"
  },
  // ============================================================================
  // VIM CONFIGURATION
  // ============================================================================
  // Extension Affinity (improve performance)
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 1
  },
  // Core Vim Settings
  "vim.leader": "<space>",
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.mouseSelectionGoesIntoVisualMode": false,
  // Neovim Integration
  "vim.enableNeovim": false,
  "vim.neovimUseConfigFile": true,
  // Vim Key Mappings
  "vim.handleKeys": {
    // Uncomment to disable specific Ctrl combinations
    // "<C-a>": false,
    // "<C-f>": false
  },
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        ";"
      ],
      "after": [
        ":"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<Esc>"
      ],
      "after": [
        "<Esc>"
      ],
      "commands": [
        {
          "command": ":nohl"
        }
      ]
    },
    {
      "before": [
        "<leader>",
        "q"
      ],
      "commands": [
        {
          "command": "workbench.actions.view.problems"
        }
      ]
    },
    {
      "before": [
        "<leader>",
        "t"
      ],
      "commands": [
        {
          "command": "workbench.actions.view.terminal"
        }
      ]
    },
    {
      "before": [
        "<C-h>"
      ],
      "commands": [
        {
          "command": "workbench.action.focusLeftGroup"
        }
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "commands": [
        {
          "command": "workbench.action.focusBelowGroup"
        }
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "commands": [
        {
          "command": "workbench.action.focusAboveGroup"
        }
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "commands": [
        {
          "command": "workbench.action.focusRightGroup"
        }
      ]
    }
  ],
