# npm configuration - XDG compliant
# https://docs.npmjs.com/cli/configuring-npm/npmrc

# Global packages location
prefix=${XDG_DATA_HOME}/npm
cache=${XDG_CACHE_HOME}/npm
tmp=${XDG_CACHE_HOME}/npm-tmp
init-module=${XDG_CONFIG_HOME}/npm/config/npm-init.js

# Store logs in XDG state directory  
logs-dir=${XDG_STATE_HOME}/npm/logs

# Performance
audit=false
fund=false
update-notifier=false

# Security
ignore-scripts=false

# Package manager preferences
package-lock=true
save-exact=false
save-prefix=^

# Progress display
progress=true
loglevel=warn

# Editor
editor=nvim
