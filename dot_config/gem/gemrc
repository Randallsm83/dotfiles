# Ruby gem configuration - XDG compliant
# https://guides.rubygems.org/command-reference/#gem-environment

# Disable documentation generation to speed up installs
gem: --no-document

# Install gems to user directory
install: --user-install --no-document
update: --user-install --no-document

# Performance
parallel: true

# Behavior
verbose: false
backtrace: false

# Sources
sources:
  - https://rubygems.org/

# Custom gem paths are set in zshenv/PowerShell profile:
# GEM_HOME=$XDG_DATA_HOME/gem
# GEM_SPEC_CACHE=$XDG_CACHE_HOME/gem
