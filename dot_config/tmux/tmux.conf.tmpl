{{- if ne .chezmoi.os "windows" -}}
# tmux configuration
# https://github.com/tmux/tmux/wiki

# Change prefix from Ctrl-b to Ctrl-a
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix

# Enable mouse support
set -g mouse on

# Set terminal type
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",*256col*:Tc"

# Start windows and panes at 1, not 0
set -g base-index 1
setw -g pane-base-index 1

# Renumber windows when one is closed
set -g renumber-windows on

# Increase scrollback buffer
set -g history-limit 10000

# Split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# Reload config with prefix + r
bind r source-file ~/.config/tmux/tmux.conf \; display "Config reloaded!"

# Vi mode
setw -g mode-keys vi
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# Status bar
set -g status-position bottom
set -g status-justify left
set -g status-style 'bg=#282c34 fg=#abb2bf'
set -g status-left ''
set -g status-right '#[fg=#61afef]%Y-%m-%d #[fg=#98c379]%H:%M'
set -g status-right-length 50
set -g status-left-length 20

# Window status
setw -g window-status-current-style 'fg=#282c34 bg=#61afef bold'
setw -g window-status-current-format ' #I:#W#F '
setw -g window-status-style 'fg=#abb2bf bg=#3e4451'
setw -g window-status-format ' #I:#W#F '

# Pane borders
set -g pane-border-style 'fg=#3e4451'
set -g pane-active-border-style 'fg=#61afef'

# Message style
set -g message-style 'fg=#282c34 bg=#61afef bold'

# Don't wait for escape sequences
set -sg escape-time 0

# Activity monitoring
setw -g monitor-activity on
set -g visual-activity off
{{- end -}}
