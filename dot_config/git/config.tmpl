# Git configuration
# Managed by chezmoi - https://www.chezmoi.io/

[user]
	name = {{ .name }}
	email = {{ .email }}

[core]
	editor = nvim
	pager = delta
{{- if eq .chezmoi.os "windows" }}
	# Windows: Normalize line endings (LF in repo, CRLF on checkout)
	autocrlf = true
	# Windows: Disable file mode tracking (no chmod)
	filemode = false
	# Windows: Enable long path support (>260 characters)
	longpaths = true
{{- else }}
	# Unix: Keep LF line endings
	autocrlf = input
{{- end }}

[init]
	defaultBranch = main

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = true

[fetch]
	prune = true

[grep]
	lineNumber = true

[branch]
	sort = -committerdate

[merge]
	tool = nvim
	conflictstyle = zdiff3

[mergetool]
	keepBackup = false
	prompt = false

[mergetool "nvim"]
	cmd = nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"

[diff]
	algorithm = histogram
	colorMoved = default

[rebase]
	autosquash = true
	autostash = true

[log]
	date = relative

{{- if eq .chezmoi.os "windows" }}
[credential]
	# Windows: Use Git Credential Manager
	helper = manager
{{- end }}

# Delta (diff tool) configuration
{{- $delta_theme := index .theme_mappings.delta .theme }}
[delta]
	navigate = true
	line-numbers = true
	side-by-side = false
	syntax-theme = {{ $delta_theme }}
	features = decorations
	pager = less -RFX
	true-color = always

[delta "decorations"]
	commit-decoration-style = bold yellow box
	file-style = bold yellow
	file-decoration-style = yellow box
	hunk-header-decoration-style = cyan box

[interactive]
	diffFilter = delta --color-only

# Color configuration (onedark-inspired)
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

# 1Password SSH Agent
{{- if .setup_1password }}
# Use SSH for GitHub when 1Password agent is available
[url "git@github.com:"]
	insteadOf = https://github.com/
{{- if eq .chezmoi.os "windows" }}
[core]
	# Windows: Use native OpenSSH which reads ~/.ssh/config for 1Password agent
	sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
{{- else if .chezmoi.kernel.osrelease | lower | contains "microsoft" }}
[core]
	# WSL: Use Windows SSH to access 1Password agent on Windows host
	sshCommand = /mnt/c/Windows/System32/OpenSSH/ssh.exe
{{- else }}
[core]
	# Native Linux/macOS: 1Password SSH agent via socket
	sshCommand = ssh -o IdentityAgent=~/.1password/agent.sock
{{- end }}
{{- end }}
