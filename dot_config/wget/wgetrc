# wget configuration
# https://www.gnu.org/software/wget/manual/wget.html#Wgetrc-Commands

# Network
timeout = 60
tries = 3
retry_connrefused = on
continue = on

# Downloads
timestamping = on
server_response = off

# HTTP
user_agent = Mozilla/5.0 (compatible; wget)
http_compression = auto
referer = ;auto

# HTTPS
check_certificate = on
ca_directory = /etc/ssl/certs

# FTP
passive_ftp = on

# Progress
show_progress = on
progress = bar:force:noscroll

# Files
restrict_file_names = windows,lowercase
